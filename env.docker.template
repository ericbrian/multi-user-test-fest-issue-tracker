# Docker Environment Configuration
# Copy this to .env.docker and fill in your values
# Usage: docker run --env-file .env.docker ...

PORT=3000
SESSION_SECRET=change_me_to_a_long_random_string

# Database
# Use 'host.docker.internal' to access localhost from within the container
DATABASE_URL=postgres://username:password@host.docker.internal:5432/test_fest_tracker

# Microsoft Entra ID (SSO)
ENTRA_ISSUER=https://login.microsoftonline.com/YOUR_TENANT_ID/v2.0
ENTRA_CLIENT_ID=YOUR_CLIENT_ID
ENTRA_CLIENT_SECRET=YOUR_CLIENT_SECRET
ENTRA_REDIRECT_URI=http://localhost:3000/auth/callback

# App Config
GROUPIER_EMAILS=
TAGS=duplicate,as-designed,low-priority

# Caching (optional)
CACHE_ENABLED=false
