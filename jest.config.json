{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!src/**/*.spec.js"
  ],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/tests/e2e/",
    "<rootDir>/playwright-report/",
    "<rootDir>/test-results/"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 35,
      "functions": 30,
      "lines": 40,
      "statements": 40
    }
  }
}
