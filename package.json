  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/ericbrian/multi-user-test-fest-issue-tracker/issues"
  },
  "homepage": "https://github.com/ericbrian/multi-user-test-fest-issue-tracker#readme",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "axios": "^1.13.2",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.18.2",
    "form-data": "^4.0.4",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "openid-client": "^5.6.5",
    "passport": "^0.7.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "prisma": "^6.13.0",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
