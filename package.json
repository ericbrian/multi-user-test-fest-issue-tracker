{
  "name": "test-fest-tracker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint:md": "markdownlint-cli2",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:api": "NODE_ENV=test node -r dotenv/config server.js dotenv_config_path=.env.test &  sleep 4 && httpyac run api-tests/testfest-api.http --all --env api-tests/.httpyac.env.json; SERVER_PID=$!; pkill -f 'node.*server.js'; exit 0",
    "start": "node server.js",
    "dev": "nodemon --watch server.js --watch src --watch public --ignore uploads --ext js,css,html server.js",
    "build:ui": "vite build --config vite.config.cjs",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "heroku-postbuild": "npm run prisma:generate"
  },
  "engines": {
    "node": "20.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericbrian/multi-user-test-fest-issue-tracker.git"
  },
