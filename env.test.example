# Test Environment Configuration Example  
# Copy this to .env.test for running API tests
# Command: cp env.test.example .env.test

NODE_ENV=test
PORT=3000

# Database (use test database to avoid corrupting dev data)
DATABASE_URL=postgresql://username:password@localhost:5432/test_fest_tracker
DB_SCHEMA=testfest

# Session secret (doesn't need to be secure for testing)
SESSION_SECRET=test_secret_at_least_32_characters_long_for_testing_purposes_only

# Test user (auto-authenticated when NODE_ENV=test)
TEST_USER_EMAIL=test@example.com
TEST_USER_NAME=Test User

# SSO Configuration (not used in test mode, but required to avoid warnings)
# Set to dummy values - they won't be validated or used
ENTRA_ISSUER=https://test
ENTRA_CLIENT_ID=test-client-id
ENTRA_CLIENT_SECRET=test-client-secret
ENTRA_REDIRECT_URI=http://localhost:3000/auth/callback

# Groupier emails for testing
GROUPIER_EMAILS=test@example.com

# Tags
TAGS=duplicate,as-designed,low-priority

# Jira (optional - leave empty for testing without Jira)
JIRA_BASE_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=
JIRA_ISSUE_TYPE=Bug
